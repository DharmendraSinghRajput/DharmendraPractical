<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.ssti.dharmendrapractical.ui.fragment.HomeFragment"
        android:label="fragment_home"
        tools:layout="@layout/fragment_home" >
        <action
            android:id="@+id/action_homeFragment_to_detilsFragment"
            app:destination="@id/detilsFragment" />
    </fragment>
    <fragment
        android:id="@+id/detilsFragment"
        android:name="com.ssti.dharmendrapractical.ui.fragment.DetilsFragment"
        android:label="fragment_detils"
        tools:layout="@layout/fragment_detils" >
        <action
            android:id="@+id/action_detilsFragment_to_homeFragment"
            app:destination="@id/homeFragment" />
    </fragment>
</navigation>